<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e8e8e8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        style="@style/Theme.AppCompat.Light.NoActionBar"
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#1abc9c" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Info"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cmpId"
                android:text="CompanyID:"
                android:layout_width="match_parent"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/cmpName"
                android:text="CompanyName:"
                android:layout_width="match_parent"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/cmpStart"
                android:text="CompanyStart:"
                android:layout_width="match_parent"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/cmpOwner"
                android:text="CompanyOwner:"
                android:layout_width="match_parent"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/cmpDept"
                android:text="CompanyDept:"
                android:layout_width="match_parent"
                android:layout_height="40dip" />

            <TextView
                android:id="@+id/cmpDes"
                android:text="CompanyDes:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>